@{
    ViewData["Title"] = "Home Page";
}
<div class="lexus-shared">
    <section class="section bidvest-mccarthy">
       <div class="container">
            <div class="row py-5">
                <div class="col-12">
                    <img src="/images/bidvest-logo-white.png" alt="Bidvest McCarthy Logo" class="my-4">
                    <p class="h5 text-white mb-5 light">It is the old motor industry adage that people buy from people, but these days we know that people only buy from the BEST people and there is no better than at McCarthy Toyota Midrand. For all your motor needs; from Purchasing your Brand New Toyota, to servicing it and using Toyota genuine Parts, to our wide range of Pre-Owned vehicles you can be guaranteed that you will be dealing with the right people.</p>
                    <a href="/dealers" class="btn btn-secondary text-uppercase text-center-xs d-block-xs mx-auto">View Bidvest Dealership</a>
                </div>
            </div>
        </div>
    </section>
    <section class="models">
        <div class="container-fluid">
            <div class="row mt-5">
                    <div class="col" onclick="location.href='/models#sedans';">
                       <h2 class="display-4">Sedans</h2>
                        <p class="h5 light">Best of all worlds</p>
                        <span></span>
                    </div>
                <div class="col" onclick="location.href='/models#suvs';">
                    <h2 class="display-4">Suvs</h2>
                    <p class="h5 light">Luxury Expanded</p>
                    <span></span>
                </div>
                <div class="col" onclick="location.href='/models#coupes';">
                    <h2 class="display-4">Coupes</h2>
                    <p class="h5 light">More than a car. A feeling</p>
                    <span></span>
                </div>
            </div>
        </div>
    </section>
    <section class="car-specials mt-6">
        <div class="container">
            <div class="row mt-5">
                <div class="col">
                    <div class="display-4">Latest Specials</div>
                    <div class="h5 light" id="showdate"></div>
                </div>
            </div>
            @Html.Partial("specials-listings")
        </div>
    </section>
 
    <section class="angle--top-left-2">
        <div class="container-fluid">           
            <div class="row">
                <div class="col-12 col-md-6 bidvest-insurance">

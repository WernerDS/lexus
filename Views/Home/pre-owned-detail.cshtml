@{
    ViewData["Title"] = "Detail";
}

<section class="section result-details pb-0">
               <div class="edge--bottom-detail"></div>
                <div class="row m-2">
                    <div class="col">
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item">
                              <a href="#"><i class="fa fa-home" aria-hidden="true"></i></a>
                            </li>
                            <li class="breadcrumb-item">
                              <a href="/pre-owned">Back to Search Results</a>
                            </li>
                            <li class="breadcrumb-item active">Lexus CT 200H</li>
                        </ul>
                    </div>
                </div>

        <div class="detail-card mx-auto">
            <div class="card-header">
               <h1>Lexus CT 200H</h1> <span>R 27 990</span>
            </div>
           
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/images/detail-img-1.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/images/detail-img-1.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/images/detail-img-1.jpg" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon " aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
            

            <div class="align-self-center mt-2 thumbnail-img d-none d-md-block">
                <img  src="~/images/lexus-model-thumb-1.jpg" alt="Card image cap">
                <img  src="~/images/lexus-model-thumb-2.jpg" alt="Card image cap">
                <img  src="~/images/lexus-model-thumb-3.jpg" alt="Card image cap">
                <img  src="~/images/lexus-model-thumb-4.jpg" alt="Card image cap">
                <img  src="~/images/lexus-model-thumb-5.jpg" alt="Card image cap">            
            </div>

            
                 
                  
            <div class="car-specs mx-auto text-center">
                <ul class="list-inline">
                    <li class="list-inline-item"><p></p><span>6785km</span></li>
                    <li class="list-inline-item"><p></p><span>2017</span></li>
                    <li class="list-inline-item"><p></p><span>1.8</span></li>
                    <li class="list-inline-item"><p></p><span>Automatic</span></li>
                </ul>    
            </div> 
                   
            <p class="px-5 my-5">1.8L 4-Cylinder DOHC 16V VVT-i and Continuously Variable (ECVT). WOW! HYBRID! Call ASAP! Are you still driving around that old thing? Come on down today and get into this superb 2015 Lexus CT! Top-shelf.</p>
<!--            <i class="fa fa-map-marker fa-2" aria-hidden="true"></i> 80 Trichardt Road, Ravenswood, Boksburg GP ZA, Gauteng-->


        </div>
        <div class="card mx-auto mt-4 d-block d-md-none">
            <div class="result-contact-sm">
                @Html.Partial("pre-owned-contact")
            </div>
        </div>
        <div class="mx-auto mt-4" style="">
            <div id="map"></div>     
        </div>
    </section>

<aside id="main-nav" class="result-contact d-none d-lg-block nav-padding">
    @Html.Partial("pre-owned-contact")
</aside>



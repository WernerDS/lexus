<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="keywords" content="Lexus vehicles, luxury cars, Lexus RX, Lexus IS, hybrids, sedans, sports cars, future cars, midsize vehicles, midsize cars, convertibles, performance cars" />
    
    @if (!string.IsNullOrEmpty(ViewBag.MetaDescription))
    {
        <meta name="description" content="@ViewBag.MetaDescription">
    }
    else
    {
        <meta name="description" content="Welcome to Lexus&#039; site. Explore the line of Lexus luxury sedans, SUVs, hybrids, convertibles and accessories, or find a Lexus dealer near you.">
    }

    

    @if (Context.Request.Path.ToString().Length <= 1)
    {
        <title>Lexus - Luxury Sedans, SUVs, Hybrids, and Performance Cars</title>
    }
    else
    {
        <title>@ViewData["Title"] - Lexus - Luxury Sedans, SUVs, Hybrids, and Performance Cars</title>
    }

    <link rel="stylesheet" href="~/css/lexus.css" />
    
    <!-- Favicons -->
	<link rel="apple-touch-icon" href="~/favicon/apple-touch-icon.png" sizes="180x180">
	<link rel="icon" href="~/favicon/favicon-32x32.png" sizes="32x32" type="image/png">
	<link rel="icon" href="~/favicon/favicon-16x16.png" sizes="16x16" type="image/png">
	<link rel="manifest" href="~/favicon/manifest.json">
	<link rel="mask-icon" href="~/favicon/safari-pinned-tab.svg" color="#ffffff">
	<link rel="icon" href="~/favicon/favicon.png">
	<meta name="msapplication-config" content="~/favicon/browserconfig.xml">
	<meta name="theme-color" content="#ffffff">
        
</head>
<body>
	
    @await Html.PartialAsync("Navigation")
	                
    @RenderBody()
    
    @await Html.PartialAsync("Footer")

    <script src="~/js/jquery-2.2.4.min.js"></script>
	<script src="~/js/popper.min.js"></script>
	<script src="~/js/bootstrap.min.js"></script>
   
    @RenderSection("Scripts", required: false)
    
    <script src="~/js/site.js" asp-append-version="true"></script>
    
</body>
</html>
